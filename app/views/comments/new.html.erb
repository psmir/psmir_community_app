<span class="breadcrumb"><%= link_to "#{@resource.class} >> ", @resource %>Add comment</span>
<div id="add_comment">
  <%= form_for [@resource, @comment] do |f| %>
    <%= hidden_field_tag :parent, params[:parent] if params[:parent] %>
    <p>
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>
</div>
