<div class="full_article">
<% cache @article do %>
  <%= link_to "#{@user.username}'s blog", user_articles_path(@user), 
      :id => 'link_to_blog_index'%>
  <div class="clear"></div>
  
  <h3><%= @article.title %></h3>
  <p><%= @article.content.html_safe %></p>
    <ul id="tag_list">
        <% @article.tags.each do |item| %>
          <li><%= link_to item, tagged_articles_path(:tag => CGI::escape(item.name)) %></li>
        <% end %>
    </ul>

  <div class="article_info">
    <%= link_to image_tag(@user.profile.avatar.url(:thumb)),
       profile_path(@user.profile), :class => 'avatar' %>

    <%= link_to "#{@user.username} (#{@user.profile.name})", 
      profile_path(@user.profile), :class => 'name' %>

    <span class="publicated"><%= time_ago_in_words(@article.created_at) %> ago</span>

    <% if user_signed_in? && current_user == @article.user %>
      <%= link_to image_tag('/images/delete.png', :alt => 'Delete', :title => 'Delete'), 
        article_path(@article), :id => 'article_delete_link',
        :method => :delete, :confirm => 'Are you sure you want to delete this article?' %>

      <%= link_to image_tag('/images/edit.gif', :alt => 'Edit', :title => 'Edit'), 
        edit_article_path(@article), :id => 'article_edit_link' %>
    <% end %>
    <div class="clear"></div>
  </div>
<% end %>

<h3>Comments</h3>
  <% if user_signed_in? %>
    <%= link_to 'Add comment', new_article_comment_path(@article) %>
  <% end %>

  <% cache @comments_key do %>
    <div class="comments">
    <% @comments.each do |comment| %>
      <div id="comment_<%= comment.id%>" style="margin-left: <%= comment.level * 20%>px;">
        <%= link_to image_tag(comment.user.profile.avatar.url(:thumb)), 
           profile_path(comment.user.profile), :class => 'avatar' %>
        <%= link_to "#{comment.user.username} (#{comment.user.profile.name})", 
          profile_path(comment.user.profile), :class => 'name' %>
        <div class="clear">&nbsp;</div>
        <div>
          <p><%= comment.body %></p>
          <p>Posted: <%= time_ago_in_words(comment.created_at) %> ago</p>
          <p><%= link_to 'Reply', new_article_comment_path(@article, { :parent => comment.id }),
            :class => 'reply_to_comment_link' if user_signed_in? %></p>
        </div>
      </div>
    <% end %>
    <%= paginate @comments %>
    </div>
<% end %>
</div>
